<Window x:Class="ResUtility.ChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResUtility"
        ShowInTaskbar="False"
        mc:Ignorable="d"
        Title="Change Value" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" x:FieldModifier="public" x:Name="ValuesList"/>
        <WrapPanel Grid.Row="1" Margin="5">
            <Button Margin="2" Height="24" x:Name="OkButton" Click="OkButton_Click" Content="Ok" Width="100"></Button>
            <Button  Margin="2" Height="24" x:Name="CancelButton" Click="CancelButton_Click" Width="100" Content="Cancel"></Button>
        </WrapPanel>
    </Grid>
</Window>
